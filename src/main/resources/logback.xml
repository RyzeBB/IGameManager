	<logger name="FILE_REPORT" level="INFO" additivity="false">
		<appender-ref ref="FILE_REPORT" />
	</logger>

	<!-- 日志输出级别 -->
	<root level="DEBUG">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE_DEBUG" />
		<appender-ref ref="FILE_ERROR" />
	</root>
</configuration>